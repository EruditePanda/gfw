<div class="map" id="map"></div>
<div class="widgets" id=widgets>

  <div class="content -dark widget-placeholder -loading">
    <h3 class="title">Snapshot</h3>
    <div class="row snapshot-row">
      <div class="small-6 snapshot-container">
        <div id="widget-tree-cover" class="widget-placeholder -loading"></div>
        <div id="widget-tree-cover-loss-ranking" class="widget-placeholder -loading"></div>
      </div>
      <div class="small-6 snapshot-container">
        <div id="widget-tree-cover-loss" class="widget-placeholder -loading"></div>
        <div id="widget-near-real-time-alerts" class="widget-placeholder -loading"></div>
      </div>
    </div>
  </div>

  <div class="content widget-placeholder -summary">
    <h3 class="title">Summary</h3>
    <ul class="summary-list">
      <li class="summary-option" data-value="cover-loss">Tree cover loss</li>
      <li class="summary-option" data-value="cover-gain">Tree cover gain</li>
      <li class="summary-option" data-value="cover-loss-alerts">Tree cover loss alerts</li>
      <li class="summary-option" data-value="fires">Fire alerts</li>
    </ul>
  </div>

  <div class="content widget-placeholder -loading js-country-widget" data-section="cover-loss" id="cover-loss">
    <h3 class="title">Tree cover loss</h3>
    <div id="widget-annual-tree-cover-loss" class="widget-placeholder -loading"></div>
  </div>

  <div class="content widget-placeholder -loading js-country-widget" data-section="cover-gain" id="cover-gain">
    <h3 class="title">Tree cover gain (2000-2012)</h3>
    <div id="widget-tree-cover-gain" class="widget-placeholder -loading"></div>
    <div id="widget-tree-cover-reforestation" class="widget-placeholder -loading"></div>
  </div>

  <div class="content widget-placeholder -loading js-country-widget" data-section="cover-loss-alerts" id="cover-loss-alerts">
    <h3 class="title">Tree cover loss alerts</h3>
    <div id="widget-tree-cover-loss-alerts" class="widget-placeholder tree-cover-loss-alerts-row -loading"></div>
  </div>

  <div class="content widget-placeholder -loading js-country-widget" data-section="fires" id="fires">
    <h3 class="title">Fire alerts</h3>
    <div id="widget-fire-alerts" class="widget-placeholder -loading widget-fire-alerts-row"></div>
  </div>
</div>
