<div class="widget -no-b-margin">
  <h4 class="title -icons">
    Tree cover
    <div>
      <svg class="icon icon-info-green"><use xlink:href="#icon-info-green"></use></svg>
      <svg class="icon icon-gray-share"><use xlink:href="#icon-gray-share"></use></svg>
    </div>
  </h4>
  <div class="m-widget-tree-cover">
    <div class="c-switch">
      <span class="label">Data source</span>
      <ul class="options">
        <li class="active">GFW</li>
        <li class="disabled">FAO</li>
      </ul>
    </div>

    <div class="graph">
      <div class="legend">
        <div class="summary">
          <div class="heading">Total tree cover</div>
          <div class="value">{{totalCover.value}}<span class="unit">{{totalCover.unit}}</span></div>
          <div class="label">(Plantations excluded)</div>
        </div>
        <div class="list">
          <div class="item">
            <div class="icon" style="background: #dddde0;"></div>
            <div class="name">Total area</div>
          </div>
          <div class="item">
            <div class="icon" style="background: #97be32;"></div><div class="name">Tree cover (2010)</div>
          </div>
          <div class="item">
            <div class="icon" style="background: #168500;"></div><div class="name">Intact Forest Landscapes (2013)</div>
          </div>
        </div>
      </div>
      <div class="m-pie-chart">
        <div id="tree-cover-graph" class="chart"></div>
      </div>
    </div>
  </div>
</div>
