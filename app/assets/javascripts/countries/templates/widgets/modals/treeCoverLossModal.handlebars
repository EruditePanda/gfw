<div class="background-modal"></div>
<div class="m-modal-country -tree-cover-loss">
  <div class="content-modal">
    <svg class="icon icon-cross js-icon-cross-close"><use xlink:href="#icon-cross"></use></svg>
    <span class="title">Annual tree cover loss settings</span>
    <div class="form-filters">
      <label class="label">Data source</label>
      <div class="c-switch -modal">
        <ul class="options">
          <li class="active">GFW</li>
          <li class="disabled">FAO</li>
          <li class="disabled">PRODES</li>
        </ul>
      </div>
      <label class="label">Time range</label>
      <div class="select-container">
        <div class="c-select">
          <div class="wrapper">
            <select id="annual-tree-cover-loss-start-year">
              <option value="2001" selected="">2001</option>
            </select>
            <div class="select-clear" style="display: none;">✕</div>
            <svg class="icon arrow-select select-arrow -green-icon"><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#arrow-select"></use></svg>
          </div>
        </div>
        <div class="c-select">
          <div class="wrapper">
            <select id="annual-tree-cover-loss-end-year">
              <option value="2001" selected="">2001</option>
            </select>
            <div class="select-clear" style="display: none;">✕</div>
            <svg class="icon arrow-select select-arrow -green-icon"><use xlink:href="#arrow-select"></use></svg>
          </div>
        </div>
      </div>
      <label class="label">Canopy density</label>
      <div class="select-container">
        <div class="c-select">
          <div class="wrapper">
            <select id="thresh">
              <option value="30" selected="">30</option>
            </select>
            <div class="select-clear" style="display: none;">✕</div>
            <svg class="icon arrow-select select-arrow -green-icon"><use xlink:href="#arrow-select"></use></svg>
          </div>
        </div>
      </div>
      <label class="label">Measurement</label>
      <div class="c-switch -modal">
        <ul class="options">
          <li class="active">Ha</li>
          <li class="disabled">%</li>
        </ul>
      </div>
    </div>
    <span class="btn green uppercase -big-width js-done-btn" href="">Done</span>
  </div>
</div>
